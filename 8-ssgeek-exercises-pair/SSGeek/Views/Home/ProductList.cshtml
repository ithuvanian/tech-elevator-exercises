
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@using SSGeek.Models
@model List<Product>


<section id="mainSection">
    <h2>Solar System Geek Gift Shop</h2>

    @foreach (Product thisProduct in Model)
    {
        string imageName = "../Content/img/" + thisProduct.ImageName;

        <div class="listContainer">

            <div class="listItem">
                <a href="@Url.Action("ProductDetail", "Home", new { id = thisProduct.ProductId })">
                    <img class="listImage" src=@imageName alt="Alternate Text" />
                </a>
            </div>
            <div class="listItem">
                <p><strong> @thisProduct.Name</strong></p>
                <p class="listPrice"> @thisProduct.Price.ToString("C2")</p>
            </div>
        </div>


    }





</section>
